{
  "name": "nfl-pool-fe",
  "version": "0.0.2",
  "description": "NFL confidence pool, front-end only.",
  "keywords": [
    "aswnn",
    "nextjs",
    "typescript",
    "NFL",
    "graphql"
  ],
  "homepage": "https://www.asitewithnoname.com/",
  "license": "MIT",
  "author": "Brian Duffey <brian.e.duffey@gmail.com>",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/bduff9/nfl-pool-fe.git"
  },
  "scripts": {
    "build": "next build",
    "clean": "rm -r .next",
    "dev": "next dev",
    "env": "sync-dotenv --sample .env.local",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "lint:script": "scriptlint && npmPkgJsonLint .",
    "lint:script:fix": "scriptlint --fix",
    "postinstall": "cd ./node_modules/react-bootstrap && npm i && npm run build && rm -rf node_modules/",
    "setup": "npx typesync && npm i && npm prune",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --ci --coverage --reporters='default' --reporters='./github-actions-reporter'",
    "test:watch": "jest --watch",
    "validate": "npm run lint && tsc --noEmit && npx ts-prune"
  },
  "config": {},
  "dependencies": {
    "@sentry/browser": "6.2.1",
    "bootstrap": "5.0.0-beta2",
    "graphql": "15.5.0",
    "graphql-request": "3.4.0",
    "jwt-simple": "0.5.6",
    "mysql": "2.18.1",
    "next": "10.0.7",
    "next-auth": "3.7.0",
    "next-pwa": "5.0.5",
    "react": "17.0.1",
    "react-bootstrap": "https://github.com/react-bootstrap/react-bootstrap/tarball/bs5-dev",
    "react-dom": "17.0.1",
    "swr": "0.4.2"
  },
  "devDependencies": {
    "@types/bootstrap": "5.0.8",
    "@types/enzyme": "3.10.8",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/eslint": "7.2.6",
    "@types/mysql": "2.15.18",
    "@types/next-auth": "3.1.25",
    "@types/node": "14.14.31",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "@types/stylelint": "9.10.1",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "@welldone-software/why-did-you-render": "6.0.5",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "eslint": "7.21.0",
    "eslint-plugin-css-modules": "2.11.0",
    "eslint-plugin-graphql": "4.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettierx": "0.17.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-you-dont-need-momentjs": "1.6.0",
    "husky": "5.1.3",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "npm-package-json-lint": "5.1.0",
    "scriptlint": "2.1.2",
    "stylelint": "13.11.0",
    "stylelint-config-standard": "20.0.0",
    "sync-dotenv": "2.6.2",
    "ts-jest": "26.5.2",
    "typescript": "4.2.2",
    "vercel": "21.3.2",
    "webpack": "5.24.3"
  },
  "engines": {
    "node": "14.x"
  },
  "private": true,
  "husky": {
    "hooks": {
      "post-merge": "npm run setup",
      "pre-commit": "lint-staged && npm run env",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --quiet --fix",
      "git add"
    ],
    "*.{md,json,css,scss}": [
      "prettierx --write",
      "git add"
    ],
    "package.json": [
      "scriptlint --fix",
      "npmPkgJsonLint ."
    ]
  },
  "jest": {
    "moduleNameMapper": {},
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./.next/",
      "./node_modules/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    }
  }
}
